                  .content-nav_mediatooltip.cnmd_leftside
                    .overlay
                    .bg(data-bg='images/all/1.jpg')
                li
                  a.rn(href='/blog-single')
                    span
                      | Next 
                      strong - Post Title
                    i.fal.fa-long-arrow-right
                  .content-nav_mediatooltip.cnmd_rightside
                    .overlay
                    .bg(data-bg='images/all/3.jpg')
        .col-lg-4
          .main-sidebar.fixed-bar
            .main-sidebar-widget
              .search-widget
                form(action='#')
                  input#se.search-inpt-item(name='se' type='text' placeholder='Search..' value='Search...')
                  button#submit_btn.search-submit.color-bg
